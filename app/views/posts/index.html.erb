<h2>Lost & Found <br> <%= @location %></h2>
<div class="lostfound">
  <h3>Lost</h3>
  <% @lostposts.reverse.each do |lostpost| %>
    <%= image_tag lostpost.image.url(:medium) %><br>
    <%= lostpost.date.strftime"%B %d, %Y" %><br>
    <%= lostpost.location %><br>
    <%= lostpost.name.upcase %><br>
    <%= lostpost.description %><br>
    <%= link_to "Contact", "/posts/#{lostpost.id}/contact", class: "linkbutt" %><br>
    <% if current_user && lostpost.user_id == current_user.id %>
      <%= link_to "Edit", edit_post_path(lostpost.id), class: "linkbutt"  %><br>
    <% else %>
    <% end %>
  <% end %>
</div>
<hr>
<div class="lostfound">
  <h3>Found</h3>
  <% @foundposts.reverse.each do |foundpost| %>
    <%= image_tag foundpost.image.url(:medium) %><br>
    <%= foundpost.date.strftime"%B %d, %Y" %><br>
    <%= foundpost.location %><br>
    <%= foundpost.name.upcase %><br>
    <%= foundpost.description %><br>
    <%= link_to "Contact", "/posts/#{foundpost.id}/contact", class: "linkbutt" %><br>
    <% if current_user && foundpost.user_id == current_user.id %>
      <%= link_to "Edit", edit_post_path(foundpost.id), class: "linkbutt" %><br>
    <% else %>
    <% end %>
  <% end %>
</div>
