<h2>Contact</h2>
<div class="center">
  <%= form_tag("/posts/#{@post.id}/contactname", :method => "post") do %>
  <%= label_tag(:subject, "Subject") %><br>
  <%= text_field_tag(:subject) %><br>
  <%= label_tag(:content)%><br>
  <%= text_area_tag(:content, nil, :rows => 10, :cols => 35 )%><br>
  <%= submit_tag("send") %>
<% end %>
</div>
