<div class="event">
  <%= image_tag @event.image.url(:thumb) %><br>
  <%= @event.name %><br>
  <%= @event.description %><br>
  <%= @event.location %><br>
  <%= @event.startdate.strftime"%d %B %Y %I:%M %p" %><br>
  <%= @event.enddate.strftime"%d %B %Y %I:%M %p" %><br>
  <% if @event.cost == 0 %>
    FREE
  <% else %>
    $<%= @event.cost %><br>
  <% end %>

</div>

<script type="text/javascript">
  let locationTest = {
    lat: <%= @event.latitude %>,
    lng: <%= @event.longitude %>
  }
  let locationName = "<%= @event.name %> <%= @event.streetaddress %> <%= @event.city %>, <%= @event.state %> <%= @event.zip %>"
</script>

 <script async defer src="https://maps.googleapis.com/maps/api/js?key=<%=ENV['GOOGLEMAPS_API_KEY']%>&callback=initMap"
type="text/javascript">
</script>


<div id="map"></div>
